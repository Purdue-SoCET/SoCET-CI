# Used to Build Image for ghrc

FROM apline:latest

RUN apt update

RUN apk add git python3 py3-pip
RUN pip3 install fusesoc
RUN mkdir ~/.ssh
RUN ssh-keyscan github.com >>~/.ssh/known_hosts

# Build/Install verilator from source
COPY ./bin /bin
